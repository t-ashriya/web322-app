<div class="row">
    <div class="col-md-12">
          <h2>
            Posts
            <a href="/posts/add" class="btn btn-success pull-right">Add Post</a>
          </h2>
          <hr />

          <table class="table table-responsive">
            <tr>
                <th>Post ID</th>
                <th>Title</th>
                <th>Post Date</th>
                <th>Category</th>
                <th>Published</th>
                <th></th>
            </tr>
            
            {{#each posts}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.title}}</td>
                <td>{{#formatDate this.postDate}}{{/formatDate}}</td>
                <td><a href="/posts?category={{this.category}}">{{this.category}}</a></td>
                <td>{{this.published}}</td>
                <td><a href="/posts/delete/{{this.id}}" class="btn btn-danger">Remove</a></td>
            </tr>
            {{/each}}
          </table>

    </div>

    <div class="col-md-12 text-center">
        <strong>{{message}}</strong>
    </div>

</div>
